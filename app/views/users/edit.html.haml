%div.row
  %div#userprofile
    %div.large-3.columns.signup
      = form_for @current_user , :validate => true do |f|
        = f.label :name
        = f.text_field :name
        = f.label :address
        = f.text_field :address
        = f.label :email
        = f.text_field :email
        = f.label :phone
        = f.text_field :phone
        = f.submit "Update User", :class => 'button radius'
%div.large-9.columns