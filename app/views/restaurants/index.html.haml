%div#h1
  %h1
    Les Plat Du Jours Aujourd'hui

%div#h2
  %h2
    Choisi par cuisine
-@restaurantcuisine.each do |restaurant|
  %div#menu= check_box_tag(restaurant.cuisine.name, '', checked = false, :class => 'show_cuisine')
  =restaurant.cuisine.name


-@restaurants.each do |restaurant|
  %li
    %ul
      %script
        = "$(document).ready(function () {"
        = "add_marker(#{restaurant.latitude}, #{restaurant.longitude}, '#{restaurant.name}', '#{restaurant.icon}');"
        = "});"
      %div#icon= image_tag(restaurant.icon)
      %div#resto= restaurant.name
      %div#cuisine= restaurant.cuisine.name
      / %div#cuisine= check_box_tag(restaurant.cuisine, '', checked = false, :class => 'show_cuisine')






      -restaurant.plats.each do |plat|
        %des= plat.description
        %div#price= plat.price


-@plats.each do |plat|
  %div#plat= plat.description

%div#map_canvas
