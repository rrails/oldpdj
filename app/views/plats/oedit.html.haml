%div.row
%div.columns.large-3.signin
  = form_for @plat do |f|
    = f.label :description
    = f.text_field :description
    = f.label :price
    = f.text_field :price
    = f.label :image
    = f.text_field :image
    = f.label :release
    = f.date_select :release, :type => 'date'
    = f.submit "Update Plats", :class => 'button radius'
%div.columns.large-9