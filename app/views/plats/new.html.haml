%div.columns.large-3.signin
  = form_for @plat do |f|
    = f.label :description
    = f.text_field :description
    = f.label :price
    = f.text_field :price
    = f.label :image
    = f.text_field :image
    = f.label :release
    = f.text_field :release, :type => 'date'
    = f.submit 'Plat', :class => 'button radius'
%div.columns.large-9